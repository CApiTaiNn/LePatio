            <Label text="Numéro de fauteuils">
               <HBox.margin>
                  <Insets left="50.0" right="20.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="txtFaut">
               <HBox.margin>
                  <Insets right="200.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="Creer" mnemonicParsing="false" onAction="#clicCreer" text="Creer">
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="annuler" mnemonicParsing="false" onAction="#fermer" text="Annuler" />
         </children>
         <opaqueInsets>
            <Insets right="30.0" />
         </opaqueInsets>
      </HBox>
   </children>
