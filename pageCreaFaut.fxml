        <items>
          <MenuItem fx:id="ZoneA" mnemonicParsing="false" text="Zone A" />
          <MenuItem fx:id="ZoneB" mnemonicParsing="false" text="Zone B" />
            <MenuItem fx:id="ZoneC" mnemonicParsing="false" text="Zone C" />
            <MenuItem fx:id="ZoneD" mnemonicParsing="false" text="Zone D" />
        </items>
         <VBox.margin>
            <Insets bottom="50.0" left="50.0" right="50.0" top="40.0" />
         </VBox.margin>
      </MenuButton>
      <MenuButton fx:id="choixRange" mnemonicParsing="false" text="Choix de la rangée">
        <items>
          <MenuItem mnemonicParsing="false" text="1 " />
          <MenuItem mnemonicParsing="false" text="2" />
            <MenuItem mnemonicParsing="false" text="3" />
            <MenuItem mnemonicParsing="false" text="4" />
            <MenuItem mnemonicParsing="false" text="5" />
            <MenuItem mnemonicParsing="false" text="6" />
            <MenuItem mnemonicParsing="false" text="7" />
            <MenuItem mnemonicParsing="false" text="8" />
        </items>
